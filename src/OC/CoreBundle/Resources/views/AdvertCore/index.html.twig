{# src/OC/PlatformBundle/Resources/views/AdvertCore/index.html.twig #}
{% extends "OCCoreBundle::layoutCoreBundle.html.twig" %}


{% block body %}

    <h2>Liste des annonces</h2>

    <ul>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('oc_platform_view', {'advert_id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par
                {{ advert.author }}, le
                {{ advert.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </ul>
{% endblock %}
